<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Çalışma Planı"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hadi Başlayalım"
        android:layout_below="@id/buttonWorkout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/buttonBasicActivities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI Ölçer"
        android:layout_below="@id/getStartedButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttonBasicActivities"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
